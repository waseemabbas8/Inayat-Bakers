<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D59300"

    tools:context="com.example.user.bakers.ui.fragments.Profile">
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        app:layout_constraintGuide_percent="0.15"
        android:id="@+id/gh1"
        />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_cross"
        android:scaleType="fitXY"
        android:id="@+id/imgBtnCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gh1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imgBtnCancel"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnCancel"
        app:layout_constraintBottom_toBottomOf="@id/gh1"
        app:layout_constraintRight_toLeftOf="@id/btnUpdate"
        android:text="Edit Profile"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/tvEditProfile"
        android:textStyle="bold"
        />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/tick"
        android:scaleType="fitXY"
        android:id="@+id/btnUpdate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gh1"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"
        android:id="@+id/gh2"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/gh1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etName1"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:drawableLeft="@drawable/icon_person"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="105dp"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:id="@+id/gh3"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/gh2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/etEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Email!"
        android:textColor="#000000"
        android:drawableLeft="@drawable/icon_email"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="105dp"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"
        android:id="@+id/gh4"/>

    <TextView
        android:id="@+id/tvPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/gh3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/etPhoneNo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Phone!"
        android:textColor="#000000"
        android:drawableLeft="@drawable/icon_phone"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="105dp"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        android:id="@+id/gh5"/>
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/gh4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/etPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_loock"
        android:text="Enter your Email!"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="105dp"
        />
</android.support.constraint.ConstraintLayout>
